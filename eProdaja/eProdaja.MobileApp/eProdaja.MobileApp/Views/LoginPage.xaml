<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:vm="clr-namespace:eProdaja.MobileApp.ViewModels"
             x:Class="eProdaja.MobileApp.Views.LoginPage">
    <ContentPage.BindingContext>
        <vm:LoginViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout Padding="5" VerticalOptions="Center" HorizontalOptions="FillAndExpand">
            <Label Text="Korisnicko ime" />
            <Entry Text="{Binding Username}"></Entry>
            <Label Text="Password"/>
            <Entry Text="{Binding Password}"></Entry>
            <Button Command="{Binding LoginCommand}" Text="Login"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>